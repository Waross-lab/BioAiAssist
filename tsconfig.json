{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNEXT",
    "lib": ["ES2022", "DOM"],
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": false,

    "isolatedModules": false,
    "moduleDetection": "auto",
    "resolveJsonModule": true,

    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

